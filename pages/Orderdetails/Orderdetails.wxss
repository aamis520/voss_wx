/* pages/Orderdetails/Orderdetails.wxss */
.header{
  width: 100%;
  height: 216rpx;
  padding-top: 80rpx;
  border-bottom: 2rpx solid #f5f5f5;
  display: flex;
}
.banner{
  width: 250rpx;
  height: 154rpx;
  border-radius: 20rpx;
  margin-left: 42rpx;
  margin-right: 24rpx;
}
.header_content{
  height: 154rpx;
  display: flex;
  align-content: center;
  flex-wrap: wrap;
}
.header_content view{
  font-size: 28rpx;
  font-weight: bold;
  width: 100%;
}
.header_content view:first-child{
  margin-bottom: 10rpx;
}
.main{
  width: 689rpx;
  margin: 0 auto;
}
.main view{
  width: 100%;
  height: 114rpx;
  box-sizing: border-box;
  padding: 0 24rpx;
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #84888a;
  line-height: 114rpx;
  border-bottom: 2rpx solid #f5f5f5;
}
.sh_tel{
  width: 100%;
  text-align: center;
  position: fixed;
  bottom: 80rpx;
  color: #63708e;
  font-size: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.kefu{
  background: none;
  border: none; 
  display: inline-block;
  font-size: 20rpx;
  color: #63708e; 
  margin: 0; 
  padding: 0;
  margin-right: 20rpx;
  height:47rpx;
}
.kefu:after{
  border: none;
}
.sh_tel view{
  margin-top: 6rpx;
}