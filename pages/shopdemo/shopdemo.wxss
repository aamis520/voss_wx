/* pages/shopdemo/shopdemo.wxss */
.banner{
  width: 660rpx;
  height: 407rpx;
  border-radius: 20rpx;
  overflow: hidden;
  margin: 0 auto;
  margin-top: 50rpx;
}
.banner image{
  width: 100%;
  height: 100%;
}
.banner_title{
  width: 100%;
  font-size: 30rpx;
  text-align: center;
  margin-top: 20rpx;
}
.sp_name,.sp_spec{
  width: 100%;
  font-size: 24rpx;
  color: #000;
  text-align: center;
}
.sp_name{
  margin-top: 12rpx;
}
.sp_spec{
  width: 660rpx;
  margin: 0 auto;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
  text-align: center;  
}
.sp_price{
  width: 610rpx;
  margin: 0 auto;
  margin-top: 36rpx;
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #7f7f7f;
}
.sp_price view:last-child text:last-child{
  margin-left: 20rpx;
  font-weight: bold;
}
.men_inf{
  width: 621rpx;
  margin: 0 auto;
  margin-top: 46rpx;
}
.men_cent{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}
.men_title{
  font-size: 24rpx;
  color: #000;
  display: flex;
  align-items: center;
}
.men_title image{
  width: 24rpx;
  height: 24rpx;
  margin-right: 26rpx;
}
.men_text{
  font-size: 22rpx;
  color: 7a7a7a;
  width: 65%;
  text-align: right;  
}
.wares_money{
  width: 660rpx;
  margin: 20rpx auto;
  padding-top: 40rpx;
  border-top: 1rpx solid #f5f5f5;
}
.wares_money .men_cent{
  width: 621rpx;
  margin: 0 auto;
}
.totalFee{
  font-size: 28rpx;
  color: red;
}
.totalPrice{
  font-size: 28rpx;
  color: #000;
  font-weight: bold;
}
button{
  width: 384rpx;
  height: 86rpx;
  background-color: #fff;
  border: 2rpx solid #55ba38;
  font-size: 30rpx;
  color: #55ba38;
  text-align: center;
  line-height: 86rpx;
  margin-top: 160rpx;
  /* margin-bottom: 120rpx; */
}