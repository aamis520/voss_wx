/* pages/yiGive/yiGive.wxss */
.giveTitle{
  font-size: 40rpx;
  margin-top: 120rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.giveTitle image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 25rpx;
}
.banner{
  width: 257rpx;
  height: 154rpx;
  
  border: 1rpx solid #fff;
  margin: 0 auto;
  margin-top: 80rpx;
  overflow: hidden;
  box-shadow: 0rpx 20rpx 1rpx 1prx #000;
}
.banner image{
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
}
.friends{
  font-size: 24rpx;
  color: #848484;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 40rpx;
}
.friends image{
  width: 44rpx;
  height: 44rpx;
  border-radius: 10rpx;
  background: red;  
  margin-right: 16rpx;
}
.sp_name,.sp_spec{
  width: 100%;
  font-size: 24rpx;
  color: #000;
  text-align: center;
}
.sp_name{
  width: 80%;
  margin: 0 auto;
  margin-top: 30rpx;
}
.sp_spec{
  width: 80%;
  margin: 0 auto;
  padding-bottom: 8rpx;
  border-bottom: 1rpx solid #f5f5f5;
}
.sp_price{
  width: 610rpx;
  margin: 0 auto;
  margin-top: 36rpx;
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #7f7f7f;
}
.sp_price view:last-child text:last-child{
  margin-left: 20rpx;
  font-weight: bold;
}
button{
  width: 384rpx;
  height: 86rpx;
  background-color: #fff;
  border: 2rpx solid #55ba38;
  font-size: 30rpx;
  color: #55ba38;
  text-align: center;
  line-height: 86rpx;
  margin-top: 200rpx;
}