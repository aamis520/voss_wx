.banner image{
  width: 100%;
  height: 100%;
}
.scene{
  width: 666rpx;
  margin: 0 auto;
  margin-top: 52rpx;
}
.scene:after{  
    content:"";  
    display:block;    
    clear:both;  
} 
.scene_title{
  font-size: 28rpx;
}
.scene_content{
  width: 100%;
}
.sceneCard{
  width: 310rpx;
  height: 263rpx;
  background: #fff;
  border-radius: 30rpx;
  margin-bottom: 28rpx;
}
.scene_content view:nth-child(2n+1){
  float: left;
}
.scene_content view:nth-child(2n){
  float: right;
}
.sceneCard_img{
  width: 306rpx;
  height: 192rpx;
  margin: 2rpx;
  border-radius: 30rpx;
  overflow: hidden;
}
.sceneCard_img image{
  width: 100%;
  height: 100%;
}
.sceneCard text{
  display: block;
  width: 100%;
  height: 100%;
  font-size: 24rpx;
  text-align: center;
  line-height: 66rpx;
}
