/* pages/Reccards/Reccards.wxss */
.msgTit{
  font-size: 24rpx;
  width: 145rpx;
  color: #000;
  display: inline-block;
}
.magText{
  font-size: 24rpx;
  color: #000;
}
.mian_inp{
  width: 100%;
  height: 80rpx;
  border-bottom: 1rpx solid #000;
  display: flex;
  align-items: center;
  padding-left: 12rpx;
  box-sizing: border-box;
  margin-top: 30rpx;
}
.mian_inp image{
  width: 36rpx;
  height: 36rpx;
  margin-right: 20rpx;
}
.mian_inp_tit{
  font-size: 24rpx;
  width: 124rpx;
  display: inline-block;
  height: 42rpx;
  line-height: 42rpx;
}
.mian_inp picker,.mian_inp input{
  box-sizing: border-box;
  display: inline-block;
  width: 360rpx;
  height: 42rpx;
  padding-left: 20rpx;
  border-left: 1rpx solid #f4f4f4;
  font-size: 24rpx;
  line-height: 42rpx;
}
.picker{
  font-size: 24rpx;
  line-height: 42rpx;
}
.tishi_text{
  width: 100%;
  text-align: center;
  font-size: 22rpx;
  color: #55ba38;
  margin-top: 44rpx;
  margin-bottom: 30rpx;
}
.conSub{
  font-size: 30rpx;
}
.Mask{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9999999;
  display: flex;
  justify-content: center;
  align-items: center;
  background: rgba(0, 0, 0, .5);
}
.reccards{
  width: 662rpx;
  height: 765rpx;
  background: #fff;
  border-radius: 20rpx;
  box-sizing: border-box;
  padding: 80rpx 63rpx;
}


.giveTitle{
  font-size: 40rpx;
  margin-top: 120rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.giveTitle image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 25rpx;
}
.banner{
  width: 257rpx;
  height: 154rpx; 
  border: 1rpx solid #fff;
  margin: 0 auto;
  margin-top: 80rpx;
  margin-bottom: 40rpx;
  overflow: hidden;
  box-shadow: 0rpx 20rpx 1rpx 1prx #000;
}
.banner image{
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
}
.sp_name,.sp_spec{
  width: 100%;
  font-size: 24rpx;
  color: #000;
  text-align: center;
}
.sp_main{
  width: 660rpx;
  margin: 0 auto;
}
.sp_name{
  margin-top: 12rpx;
}
.sp_spec{
  width: 80%;
  margin: 0 auto;
  padding-bottom: 8rpx;
}
.sp_price{
  font-size: 30rpx;
  color: #000;
  font-weight: bold;
  text-align: center;
  margin-top: 50rpx;
  margin-bottom: 70rpx;
}
.zf_content{
  width: 100%;
  padding: 55rpx;
  border-top: 2rpx solid #f5f5f5;
  border-bottom: 2rpx solid #f5f5f5;
  display: flex;
  position: relative;
}
.headImg{
  width: 70rpx;
  height: 70rpx;
  border-radius: 10rpx;
  margin-right: 40rpx;
  background: red;
}
.zf_text{
  height: 70rpx;
}
.zf_text .text{
  font-size: 26rpx;
}
.giveImg{
  width: 130rpx;
  height: 130rpx;
  border: 1rpx solid #ccc;
  border-radius: 10rpx;
  position: absolute;
  right:200rpx;
  bottom: -100rpx;
  z-index: 999;
}
.complete{
  width: 384rpx;
  height: 86rpx;
  background-color: #fff;
  border: 2rpx solid #55ba38;
  font-size: 30rpx;
  color: #55ba38;
  text-align: center;
  line-height: 86rpx;
  margin-top: 200rpx;
  margin-bottom:120rpx;
}