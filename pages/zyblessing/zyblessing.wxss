/* pages/blessing/blessing.wxss */
page{
  background: #f9f9f9;  
}
.main{
  background: #f9f9f9;
  width: 100%;
}
.banner{
  width: 257rpx;
  height: 154rpx;
  border-radius: 16rpx;
  border: 1rpx solid #fff;
  margin: 0 auto;
  margin-top: 43rpx;
  overflow: hidden;
}
.banner image{
  width: 100%;
  height: 100%;
}
.banner_title{
  width: 100%;
  text-align: center;
  color: #7f7f7f;
  font-size: 24rpx;
  margin: 27rpx 0;
}
.blessing_content .select{
  width: 100%;
  height: 108rpx;
  box-sizing: border-box;
  border-top: 2rpx solid #f7f7f7;
  border-bottom: 2rpx solid #f7f7f7;
  margin-bottom: 16rpx;
  background: #fff;
  font-size: 25rpx;
  color: #000;
  padding: 40rpx 66rpx;
}
.select icon{
  float: right
}
.blessing_content .blessing{
  height: auto;
  overflow: hidden;
}
.blessing textarea{
  width: 100%;
  height: 200rpx;
  text-align: justify;
}
.blessing .add{
  padding: 0;
  margin: 0;
  width: 200rpx;
  height: 74rpx;
  box-sizing: border-box;
  border: 1rpx solid #dcdcdc;
  font-size: 24rpx;
  color: #b6b6b6;
  text-align: center;
  line-height: 72rpx;
  /* float: left; */
  margin-right: 30rpx;
}
.giveImg,.giveVideo{
  width: 200rpx;
  height: 200rpx;
  margin-top: 70rpx;
  /* float: left; */
}
.giveImg{
  margin-right: 30rpx;
}
button{
  width: 644rpx;
  height: 82rpx;
  font-size: 30rpx;
  line-height: 82rpx;
  margin: 0 auto;
  margin-top: 46rpx;
}
.givefri{
  margin-bottom: 80rpx;
}
.giveme{
  margin-top: 425rpx;
}
.tishi_msg{
  font-size: 20rpx;
  color: #6a7fa6;
  text-align: center;
  margin-top: 62rpx;
}

.removeBox{
  margin-top: 20rpx;
  overflow:hidden;
  width:100%;
  float:left;
}
.remove{
  padding: 0;
  margin: 0;
  width: 200rpx;
  height: 74rpx;
  box-sizing: border-box;
  border: 1rpx solid #dcdcdc;
  font-size: 24rpx;
  color: #fff;
  text-align: center;
  line-height: 72rpx;
  float: left;
  margin-right: 30rpx;
  background: red;
}
.giveImg,.giveVideo{
  position: relative
}
.shut_icon{
  position: absolute;
  z-index: 999;
  right: 4rpx;
  top: 4rpx;
  width: 40rpx;
  height: 40rpx;
}